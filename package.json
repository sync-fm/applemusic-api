{
  "name": "@syncfm/applemusic-api",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "private": false,
  "version": "0.0.1",
  "author": "xwxfox",
  "license": "MIT",
  "description": "Apple Music API",
  "scripts": {
    "build": "rm -rf ./dist && tsc --build --verbose --diagnostics && tsc-alias",
    "test": "vitest run --coverage",
    "dtest": "bun run src/test.ts",
    "type-check": "tsc --noEmit",
    "lint": "biome lint . --write",
    "format": "biome format . --write",
    "knip": "knip",
    "check": "bun run knip && biome check --write && bun run type-check && bun run test",
    "status:update": "bun scripts/update-status.ts",
    "docs:content": "bun scripts/generate-docs.ts",
    "docs:build": "bun run status:update && bun run docs:content && rm -rf ./docs && bunx vitepress build docs-src --outDir docs",
    "docs:serve": "bun run docs:content && bunx vitepress dev docs-src --port 4321 --host 0.0.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sync-fm/applemusic-api.git"
  },
  "bugs": {
    "url": "https://github.com/sync-fm/applemusic-api/issues"
  },
  "homepage": "https://github.com/sync-fm/applemusic-api#readme",
  "keywords": [
    "music",
    "typescript",
    "library",
    "data-processing",
    "applemusic"
  ],
  "dependencies": {
    "axios": "^1.11.0",
    "tough-cookie": "^6.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@types/bun": "latest",
    "@types/node": "^24.7.0",
    "@vitest/coverage-v8": "3.2.4",
    "knip": "^5.64.2",
    "tsc-alias": "^1.8.16",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
